# Renal Tales Environment Configuration
# Copy this file to .env and update the values for your environment

# Application
APP_NAME="Renal Tales"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/renaltales

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=renaltales
DB_USERNAME=root
DB_PASSWORD=

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_DATABASE=renaltales_test
TEST_DB_USERNAME=root
TEST_DB_PASSWORD=

# Mail
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@renaltales.local
MAIL_FROM_NAME="Renal Tales"

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=file

# Redis (optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Security
BCRYPT_ROUNDS=10
