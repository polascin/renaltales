# Local Development Environment Configuration
# Copy this to .env.local for local development

# Application
APP_NAME="Renal Tales - Local"
APP_VERSION="2025.v2.0"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost/renaltales
APP_TIMEZONE="Europe/Bratislava"

# Local Database
DB_CONNECTION=local
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=renaltales_local
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=
DB_STRICT=false
DB_TIMEOUT=30

# Test Database (Local)
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_DATABASE=renaltales_test
TEST_DB_USERNAME=root
TEST_DB_PASSWORD=
TEST_DB_CHARSET=utf8mb4
TEST_DB_COLLATION=utf8mb4_unicode_ci
TEST_DB_PREFIX=test_

# Mail (Local)
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@renaltales.local
MAIL_FROM_NAME="Renal Tales Local"

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=file

# Redis (optional - for local development)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Security (Development)
APP_SECRET=local-development-secret-key
JWT_SECRET=local-development-jwt-secret
BCRYPT_ROUNDS=10

# File Storage
STORAGE_DRIVER=local
STORAGE_PATH=storage/files

# Additional Paths
LOG_PATH=storage/logs/app.log
CACHE_PATH=storage/cache
SESSION_PATH=storage/sessions
