# ===============================================
# Renal Tales - .gitignore
# ===============================================

# ===== SECURITY & ENVIRONMENT =================
# Environment configuration files
.env
.env.*
!.env.example
!.env.local.example
!.env.production.example

# Configuration files with sensitive data
config/*.local.php
config/*.prod.php
config/*.production.php
config/*.staging.php
config/*.development.php
config/*.testing.php
config/secrets.php
config/database.php
config/auth.php
config/mail.php
config/services.php
config/session.php
config/jwt.php
config/oauth.php
config/stripe.php

# Sensitive credential files
credentials.php
credentials.json
credentials.yaml
credentials.yml
credentials.xml
credentials.ini
credentials.conf
credentials.config
credentials.env
credentials.txt
secrets.php
secrets.json
secrets.yaml
secrets.yml
secrets.xml
secrets.ini
secrets.conf
secrets.config
secrets.env
secrets.txt

# Certificate and key files
*.pem
*.key
*.crt
.microkey

# SSH and authentication files
.ssh/
id_rsa
id_rsa.pub
.known_hosts

# Database credentials and dumps
*.sql
*.dump
*.bak

# ===== DEPENDENCIES ===========================
# Composer
/vendor/
composer.phar
# Node.js
yarn.lock
node_modules/

# ===== TESTING & COVERAGE =====================
# Application storage
/storage/logs/*.log
/storage/cache/*
!/storage/cache/.gitkeep
/storage/sessions/*
!/storage/sessions/.gitkeep

# Public uploads
/public/uploads/*
!/public/uploads/.gitkeep

# ===== DATABASE ===============================
# Database files
*.sqlite
*.db

# ===== BACKUP & TEMPORARY FILES ===============
# Build artifacts
/build/

# ===== TESTING 6 COVERAGE =====================
/phpunit.xml
.php_unit.result.cache
/coverage/
.coverage
*.coveragexml

# ===== CODE QUALITY TOOLS =====================
# PHP CS Fixer
.php_cs
/php_cs.cache

# OS FILES
# Windows
Thumbs.db
$RECYCLE.BIN/

# macOS
.DS_Store

# Linux
.directory
.Trash-*

# ===== BACKUP 6 TEMPORARY FILES ===============
# Backup files
*.backup

# ===== PROJECT SPECIFIC =======================
# Documentation reports
*_REPORT.md
!README.md

# Important: These patterns ensure critical files are tracked
!.htaccess
!composer.json
!package.json
!LICENSE
!**/.gitkeep

